<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/darker_gray">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Major:"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="24dp"
        android:id="@+id/title_major"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium "
        android:id="@+id/tv_major"
        android:layout_alignBottom="@+id/title_major"
        android:layout_toRightOf="@+id/title_major"
        android:layout_toEndOf="@+id/title_major"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Minor:"
        android:id="@+id/title_minor"
        android:layout_alignBottom="@+id/tv_major"
        android:layout_toRightOf="@+id/tv_major"
        android:layout_toEndOf="@+id/tv_major"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium"
        android:id="@+id/tv_minor"
        android:layout_above="@+id/title_mid"
        android:layout_toRightOf="@+id/title_minor"
        android:layout_toEndOf="@+id/title_minor"
        android:layout_alignBottom="@+id/title_minor"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:allowUndo="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MID:"
        android:id="@+id/title_mid"
        android:layout_below="@+id/title_major"
        android:layout_alignLeft="@+id/title_major"
        android:layout_alignStart="@+id/title_major"
        android:layout_marginTop="25dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium"
        android:id="@+id/tv_mid"
        android:layout_alignBottom="@+id/title_mid"
        android:layout_alignLeft="@+id/tv_major"
        android:layout_alignStart="@+id/tv_major" />

</RelativeLayout>