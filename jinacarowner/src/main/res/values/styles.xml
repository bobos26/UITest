<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- TextView -->
    <style name="MainTitle">
        <item name="android:textColor">@color/main_title_text</item>
        <item name="android:textSize">@dimen/app_text_size_small</item>
    </style>
    <style name="SecondTitle">
        <item name="android:textColor">@color/second_title_text</item>
        <item name="android:textSize">@dimen/app_text_size_small</item>
        <item name="android:layout_margin">@dimen/common_margin_5dp</item>
    </style>
    <style name="SecondFormTitle">
        <item name="android:textColor">@color/second_form_item_title_text</item>
        <item name="android:textSize">@dimen/app_text_size_small</item>
        <item name="android:layout_margin">@dimen/common_margin_5dp</item>
    </style>
    <style name="SecondFormEditText">
        <item name="android:textSize">@dimen/app_text_size_small</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Buttons -->
    <style name="BaseButton">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">@dimen/app_text_size_medium</item>
        <item name="android:background">@color/button_background</item>
        <item name="android:layout_marginLeft">@dimen/common_margin_5dp</item>
        <item name="android:layout_marginRight">@dimen/common_margin_5dp</item>
        <item name="android:layout_marginTop">@dimen/common_margin_15dp</item>
        <item name="android:layout_marginBottom">@dimen/common_margin_5dp</item>
        <item name="android:padding">@dimen/common_margin_5dp</item>
    </style>

    <style name="SmallCircleButton" parent="BaseButton">
        <item name="android:textSize">@dimen/app_text_size_small</item>
        <item name="android:layout_marginLeft">@dimen/common_margin_15dp</item>
        <item name="android:layout_marginRight">@dimen/common_margin_15dp</item>
        <item name="android:layout_marginTop">@dimen/common_margin_15dp</item>
        <item name="android:layout_marginBottom">@dimen/common_margin_5dp</item>
    </style>
</resources>
