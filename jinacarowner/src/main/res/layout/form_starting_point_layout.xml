<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/common_margin_5dp"
              android:orientation="vertical"
              tools:showIn="@layout/fragment_register_goods">

    <TextView
        style="@style/SecondTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상차지/상차방법"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/SecondFormTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="광역"/>

        <Spinner
            android:id="@+id/startingPointWideAreasSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/SecondFormTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시군구"/>

        <Spinner
            android:id="@+id/startingPointCitiesAndTownsSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/SecondFormTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상차지"/>

        <EditText
            style="@style/SecondFormEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/startingPointDetailAddressEditText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/SecondFormTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상차방법"/>

        <Spinner
            android:id="@+id/wayToLoadSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>