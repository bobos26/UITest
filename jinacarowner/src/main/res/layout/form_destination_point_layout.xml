<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/common_margin_5dp"
              android:orientation="vertical"
              tools:showIn="@layout/fragment_register_goods">

    <TextView
        style="@style/SecondTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하차지/하차방법"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/SecondFormTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하차지"/>

        <EditText
            style="@style/SecondFormEditText"
            android:id="@+id/destinationPointAddressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/SecondFormTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하차방법"/>

        <Spinner
            android:id="@+id/wayToUnloadSpinnerDepth1Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/wayToUnloadSpinnerDepth2Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>